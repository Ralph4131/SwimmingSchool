@model List<Session>

<h1>My Sessions</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Lesson</th>
            <th>Enrolled Swimmers</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model)
        {
            <tr>
                <td>@session.Date.ToShortDateString()</td>
                <td>@session.Time</td>
                <td>@session.Lesson</td>
                <td>@session.EnrolledSwimmers</td>
                <td>
                    <a asp-action="Details" asp-route-id="@session.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
